<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bg</item>
    </style>

    <style name="control_bar_icon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">26dp</item>
        <item name="android:textColor">@drawable/icon_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="base_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="program_nav_icon">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/icon_text_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="heading_text">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textColor">@color/text_program_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_button">
        <item name="android:textSize">@dimen/min_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_button_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:padding">@dimen/min_padding</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/default_android_padding</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="dialog_root">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="dialog_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_dialog_btn</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="dialog_seek_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">72sp</item>
    </style>

    <style name="dialog_seekbar_label">
        <item name="android:layout_width">@dimen/seekbar_label_width</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_android_padding</item>
    </style>

    <style name="dialog_radio_option" parent="RadioButtonAppTheme">
        <item name="android:listChoiceIndicatorSingle">@drawable/apptheme_btn_radio_holo_dark</item>
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">@dimen/min_padding</item>
    </style>

    <style name="dialog_seeker" parent="SeekBarAppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/min_padding</item>
        <item name="android:layout_marginRight">@dimen/min_padding</item>
    </style>

    <style name="RadioButtonAppTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/apptheme_btn_radio_holo_dark</item>
    </style>

    <style name="SeekBarAppTheme" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/dialog_seekbar_progress</item>
        <item name="android:indeterminateDrawable">@drawable/dialog_seekbar_progress</item>
        <item name="android:thumb">@drawable/selector_dialog_seekbar</item>
    </style>

    <style name="WhiteSeekbarTheme" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/play_seekbar_progress</item>
        <item name="android:indeterminateDrawable">@drawable/play_seekbar_progress</item>
        <item name="android:thumb">@drawable/selector_play_seekbar</item>
    </style>

</resources>
